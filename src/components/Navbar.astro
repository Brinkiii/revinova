---
import {Image} from "astro:assets";
import revinovaLogo from "../images/Logo_Revinova.svg";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<script src="../flowbite.js"></script>
<nav id="navbar" class="fixed top-5 z-30 max-h-[72px] w-full max-w-[1536px] px-4 drop-shadow-[5px_10px_25px_rgba(0,0,0,0.15)] md:max-h-[96px]">
  <div class="flex max-h-[72px] flex-wrap items-center justify-between rounded-full border-gray-200 bg-white px-8 pb-4 pt-1 dark:bg-gray-900 md:max-h-[96px] md:px-16">
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <Image src={revinovaLogo} class="h-auto w-16 md:w-24" alt="Flowbite Logo" />
    </a>
    <button data-collapse-toggle="navbar-default" type="button" class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600 md:hidden" aria-controls="navbar-default" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg class="h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul class="mt-4 flex flex-col rounded-lg border border-gray-100 bg-gray-50 p-4 font-medium dark:border-gray-700 dark:bg-gray-800 md:mt-0 md:flex-row md:space-x-8 md:border-0 md:bg-white md:p-0 md:dark:bg-gray-900 rtl:space-x-reverse">
        <li class={currentPath === "" ? "active" : ""}>
          <a href="/" class="nav-link block rounded px-3 py-2 text-white md:bg-transparent md:p-0 md:text-black md:hover:text-stone-700" aria-current="page">Startseite</a>
        </li>
        <li class={currentPath === "leistungen" ? "active" : ""}>
          <a href="/leistungen" class="nav-link block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-stone-700">Unsere Leistungen</a>
        </li>
        <li class={currentPath === "blog" ? "active" : ""}>
          <a href="/blog" class="nav-link block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-stone-700">Blog</a>
        </li>
        <li class={currentPath === "kontakt" ? "active" : ""}>
          <a href="/kontakt" class="nav-link block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-stone-700">Kontakt</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<style>
  a {
    color: gray;
    font-size: 18px;
  }
  .active a{
    color: black;
  }
</style>