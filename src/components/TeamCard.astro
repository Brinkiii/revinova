---
const {name, position, src} = Astro.props
import {Image} from "astro:assets";
---

<div class="w-full max-w-sm rounded-lg border border-gray-200 bg-white shadow-lg dark:border-gray-700 dark:bg-gray-800">
    <div class="flex flex-col items-center py-10">
        <!-- <img class="mb-3 h-24 w-24 rounded-full shadow-lg" src="/docs/images/people/profile-picture-3.jpg" alt="Bonnie image"/> -->
        <Image src={src} class="mb-3 size-32 rounded-full object-cover shadow-lg" alt="Teambild" />

        <p class="mb-1 text-xl font-medium text-gray-900 dark:text-white">{name}</p>
        <span class="text-sm text-gray-500 dark:text-gray-400">{position}</span>
        <div class="mt-4 flex md:mt-6">
            <a href="#" class="inline-flex items-center rounded-lg bg-stone-950 px-5 py-3 text-center text-sm font-medium text-white transition-all hover:bg-stone-700 focus:outline-none focus:ring-4 focus:ring-stone-400">Telefon</a>
            <a href="#" class="ms-2 inline-flex items-center rounded-lg bg-stone-950 px-5 py-3 text-center text-sm font-medium text-white transition-all hover:bg-stone-700 focus:outline-none focus:ring-4 focus:ring-stone-400">E-Mail</a>
        </div>
    </div>
</div>
