---
import {Image} from "astro:assets";
const {src, title, description, link} = Astro.props;
const defaultAlt = "Card Image";
---

<div class="max-w-sm rounded-lg border border-gray-200 bg-white shadow dark:border-gray-700 dark:bg-gray-800">
    <a href={link}>
        <Image src={src} class="rounded-t-lg object-cover max-h-[220px]" alt={defaultAlt} />
    </a>
    <div class="p-5">
        <a href={link}>
            <p class="text-[22px] tracking-tight text-gray-900 dark:text-white">{title}</p>
        </a>
        <p class="mb-3 text-[14px] font-normal text-gray-700 dark:text-gray-400">{description}</p>
        <a href={link} class="inline-flex items-center rounded-lg bg-stone-950 px-8 py-4 text-center text-sm font-medium text-white transition-all hover:bg-stone-700 focus:outline-none focus:ring-4 focus:ring-blue-300">
            Mehr lesen
             <svg class="ms-2 h-3.5 w-3.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
    </div>
</div>
