---
import {Image} from "astro:assets";
const {src, title, description, link} = Astro.props;
const defaultAlt = "Card Image";
---

<div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <a href={link}>
        <Image src={src} class="rounded-t-lg object-cover max-h-[220px]" alt={defaultAlt} />
    </a>
    <div class="p-5">
        <a href={link}>
            <p class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</p>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{description}</p>
        <a href={link} class="inline-flex items-center px-8 py-4 text-sm font-medium text-center text-white bg-stone-950 rounded-lg hover:bg-stone-700 focus:ring-4 focus:outline-none focus:ring-blue-300 transition-all">
            Mehr lesen
             <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
    </div>
</div>
